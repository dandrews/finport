          %tr
            %td
              %h4 Status
          %tr
            %td
              %h4 Social Index
              %div
                %i.icon-fire.icon-large
                %a{:href => "#/si"} #.#
          %tr
            %td
              %h4 FinPort
          %tr
            %td
              %h4 My Profile
              %br
              %p= "Likes: #{current_user.likes.count}"
              %p= "Dislikes: #{current_user.dislikes.count}"
              %p= "Kept: #{current_user.keeps.count}"
    .span6
      = render :partial => "feature"

    .span3
      %table.table.table-bordered
        %tbody
          %tr
            %td
              .engine
                %h4 Work
                %h5 « Article 1 Headline »
