.container
  .row
    .span3
      %table.table.table-bordered
        %tbody
          %tr
            %td
              Relevant - Insightful - Empowering
      %table.table.table-bordered
        %tbody
          %tr
            %td
              %form.form-horizontal
                %select.span2
                  %option standard
