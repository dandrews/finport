            %td
              .engine
                %h4 Life
                %h5 « Article 2 Headline »
          %tr
            %td
              .engine
                %h4 Investment
                %h5 « Article 3 Headline »
    / end span3
  / end row
  .row
    .span12
      %hr/
      %ul
        %li
